<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Thickness x:Key="SmallIndentLeft" Left="20"/>
    <Visibility x:Key="Debug">Collapsed</Visibility>
    <Style TargetType="{x:Type FrameworkElement}" x:Key="Layout.LeftIndent">
        <Setter Property="Margin" Value="{StaticResource SmallIndentLeft}" />
    </Style>
    <Style TargetType="{x:Type Label}" x:Key="Layout.Caption">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="13" />
    </Style>
</ResourceDictionary>